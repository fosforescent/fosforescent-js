

{
  "verbose": true,
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx"],
  "moduleDirectories": ["node_modules", "src"],
  "transform": {
    "^.+\\.(ts|tsx)?$": "ts-jest",
    "^.+\\.(js|jsx)$": "babel-jest"
  },
  "testEnvironment": "jest-environment-jsdom",
  "moduleNameMapper": {
    "\\.(less|scss)$": "identity-obj-proxy",
    "\\.(css)$": "jest-css-modules"
  },
  "modulePathIgnorePatterns": ["<rootDir>/dist/"]
}
