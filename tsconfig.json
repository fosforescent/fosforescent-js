{
  "compilerOptions": {
    "outDir": "./dist/",
    "types": [
      "jest",
      "node"
    ],
    "jsx": "preserve",
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "useDefineForClassFields": true,
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    // "noEmit": true,
    "incremental": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitAny": true,
    "baseUrl": ".",
 
    "strictNullChecks": true
  },

  "include": [
    "**/*.ts",
    "**/*.tsx",
    "declarations.d.ts",
    "lib/**/*.d.ts",
    "lib/dnd/multi-backend.js"  
, "../vite.config.ts"  ],
  "exclude": [
    "node_modules"
  ], 
  "outDir": "./dist"
}
